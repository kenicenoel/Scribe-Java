<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kenicenoel.scribe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/scribe_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/scribe_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="audio/amr" />
                <data android:mimeType="audio/opus" />
                <data android:mimeType="audio/m4a" />
                <data android:mimeType="audio/aac" />
            </intent-filter>
        </activity>
    </application>

</manifest>