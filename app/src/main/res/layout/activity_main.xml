<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kenicenoel.scribe.MainActivity">

    <TextView
        android:id="@+id/scribeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scribe"
        android:drawableLeft="@drawable/ic_feather"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif-condensed"

   />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/textRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/layout_message"
        android:layout_below="@id/scribeHeader">

    </android.support.v7.widget.RecyclerView>



</RelativeLayout>
